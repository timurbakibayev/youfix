<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.gii.youfix.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/iNeedRepair"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="@dimen/fab_margin"
        android:text="Моему авто требуется ремонт"
        android:drawableLeft="@drawable/ic_directions_car_black_24dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/iCanRepair"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="@dimen/fab_margin"
        android:text="Я готов ремонтировать"
        android:drawableLeft="@drawable/ic_build_black_24dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/iAvarKom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="@dimen/fab_margin"
        android:text="Я аварийный коммисар"
        android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
        android:textSize="24sp"/>

    </LinearLayout>

</RelativeLayout>
